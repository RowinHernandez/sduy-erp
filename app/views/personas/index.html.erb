<h1>Listing personas</h1>

<table>
  <tr>
    <th>id</th>
    <th>Nombre</th>
    <th>Telefono</th>
    <th>E-Mail</th>
    <th colspan="3">Acciones</th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%= persona.id%></td>
    <td><%= persona.nombre%></td>
    <td><%= persona.telefono%></td>
    <td><%= persona.email%></td>
    <td><%= link_to 'Ver al panita', persona %></td>
    <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
    <td><%= link_to 'Destruir', persona, method: :delete, data: { confirm: 'Tas seguro pana?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Persona', new_persona_path %>
